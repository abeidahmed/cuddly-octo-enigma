<main class="flex justify-center min-h-screen py-12 bg-gray-50 sm:px-6 lg:px-8">
  <div class="w-full sm:max-w-md">
    <div class="px-4">
      <h1 class="mt-6 text-3xl font-extrabold leading-9 text-center text-gray-900">
        Create an account
      </h1>
    </div>
    <div class="px-10 py-8 mt-8 bg-white shadow sm:rounded-md">
      <%= render "form" %>
      <div class="py-5">
        <div class="w-full border-t border-gray-200"></div>
      </div>
      <div class="text-gray-600 text-center text-sm">
        Already have an account? <%= link_to "Sign in", new_session_path, class: "hover:underline" %>
      </div>
    </div>
  </div>
</main>
