<%= form_with url: sessions_path, data: { remote: true, controller: "hotwire", action: "ajax:error->hotwire#showErrors" } do |form| %>
  <div>
    <%= form.label :username, class: "form-label" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>
  <div class="mt-4">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <%= render "shared/form_error", error_field: "invalid" %>
  <div class="mt-4">
    <%= form.submit "Sign in", class: "btn btn-primary w-full" %>
  </div>
<% end %>
